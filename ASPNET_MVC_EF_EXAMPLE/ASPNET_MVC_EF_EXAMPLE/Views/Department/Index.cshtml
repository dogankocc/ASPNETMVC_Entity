@using ASPNET_MVC_EF_EXAMPLE.Models
@model List<Departments>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 0;
}
    <a href="/Department/Add">Yeni</a>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">AD</th>
                <th scope="col">Güncelle</th>
                <th scope="col">Sil</th>
            </tr>

        </thead>

        <tbody>
            @foreach (var dept in Model)
            {
                i +=  i;
                <tr>
                    <th scope="row">@i</th>
                    <td>@dept.DepartmentID</td>
                    <td>@dept.DepartmentName</td>
                    <td><a href="/Department/UpdateDepartment/@dept.DepartmentID">Güncelle</a></td>
                    <td><a href="/Department/DeleteDepartment/@dept.DepartmentID">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>


